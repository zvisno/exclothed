<div class="container">
  <header>
    <div>Your personal Dressing Room on Exclothed</div>
    <p><small> Add your clothes. Manage your clothes. Find articles of clothes for exchange. And finally exchange your clothes.</small></p>
  </header>


  <!--Own clothes-->

  <div class="container-fluid">
    <div class="kerzon-text"><h2>Your Clothes </h2></div>
    <div class="kerzon"></div>
  </div>

    <% @user_clothes.each do |user_clothes| %>
        <div class="container-fluid home-transition">
          <div class="row-fluid">
            <div class="users-clothes-container">
              <%= render partial: 'clothings/clothing', object: user_clothes %>
            </div>
          </div>
        </div>
    <% end %>

  <!--Liked clothes-->

    <div class="container-fluid">
      <div class="kerzon-text"><h2>Clothes you liked </h2></div>
      <div class="kerzon"></div>
    </div>

    <div class="container-fluid">
        <% if current_user.user_wanted_clothes.empty? %>
            <%= "You want no clothes?" %>
        <% else %>
          <% current_user.user_wanted_clothes.each do |wanted_clothes|%>
              <%if isArticleOfClothesExists(wanted_clothes.wanted_clothes_id)%>
                  <div class="wanted-clothes-container">
                    <%= render partial: 'home/clothes', object: Clothing.find(wanted_clothes.wanted_clothes_id) %>
                  </div>
              <%end%>
          <% end %>
        <% end %>
    </div>
</div>