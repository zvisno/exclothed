<%= form_for @clothing do |f| %>
Type:  <%= f.select :clothing_type_id, ClothingType.all.collect { |p| [p.name, p.id]} %>
Color: <%= f.select :color_id, Color.all.collect { |c| [c.name, c.id] }%>
Size:  <%= f.select :size_id, Size.all.collect { |s| [s.name, s.id] } %>
Exchange to: <%= f.select :exchange_to_clothing_type_id, ClothingType.all.collect { |e| [e.name, e.id] } %>
    <% current_user.id %>


<%=f.submit%>
<% end %>
